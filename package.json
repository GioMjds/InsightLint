{
  "name": "insightlint",
  "displayName": "insightlint",
  "description": "AI-powered code review assistant",
  "version": "0.0.3",
  "icon": "logo.png",
  "publisher": "Mimic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GioMjds/InsightLint.git"
  },
  "homepage": "https://github.com/GioMjds/InsightLint?tab=readme-ov-file#insightlint-",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Linters",
    "AI",
    "Programming Languages",
    "Extension Packs"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "insightlint.startReview",
        "title": "Start Code Review",
        "category": "InsightLint"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "insightlint",
          "title": "InsightLint",
          "icon": "$(search-view-icon)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "insightlint.startReview",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "insightlint": [
        {
          "id": "insightlint.reviewPanel",
          "name": "Code Review",
          "type": "webview",
          "when": "resourceExtname != ''",
          "icon": "$(search-view-icon)"
        }
      ]
    },
    "configuration": {
      "title": "InsightLint",
      "properties": {
        "insightlint.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API Key"
        },
        "insightlint.useSecondarySideBar": {
          "type": "boolean",
          "default": true,
          "description": "Show InsightLint panel in secondary sidebar (like GitHub Copilot)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/marked": "^5.0.2",
    "highlight.js": "^11.11.1",
    "marked": "^16.0.0"
  }
}
